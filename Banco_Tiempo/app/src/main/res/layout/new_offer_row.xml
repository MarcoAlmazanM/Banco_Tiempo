<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/parent.contentLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/offerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/home_gradient_admin"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/tVJob"
                        style="@style/viewParent.headerText.HomeCardTitle"
                        android:text="Mi oferta" />

                    <ImageView
                        android:id="@+id/btnDelOffer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/baseline_close_black_48" />

                    <TextView
                        android:id="@+id/tVDescription"
                        style="@style/viewParent.headerText.homeCardContent"
                        android:layout_width="200dp"
                        android:layout_below="@+id/tVJob"
                        android:scrollHorizontally="false"
                        android:text="DescripciÃ³n de mi oferta" />

                    <ImageView
                        android:id="@+id/iVUserPhoto"
                        style="@style/homeCardImage"
                        android:layout_toEndOf="@+id/tVDescription"
                        android:layout_below="@+id/btnDelOffer"
                        app:srcCompat="@drawable/baseline_account_circle_black_48" />

                </RelativeLayout>

            </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>