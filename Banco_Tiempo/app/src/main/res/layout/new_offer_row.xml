<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/parent.contentLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rLlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/home_gradient_admin">

            <TextView
                android:id="@+id/tVJob"
                style="@style/viewParent.headerText.HomeCardTitle"
                android:text="Mi oferta" />

            <TextView
                android:id="@+id/tVDescription"
                style="@style/viewParent.headerText.homeCardContent"
                android:layout_width="200dp"
                android:scrollHorizontally="false"
                android:layout_below="@+id/tVJob"
                android:text="DescripciÃ³n de mi oferta" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/iVUserPhoto"
                    style="@style/homeCardImage"
                    android:layout_height="100dp"
                    android:layout_toLeftOf="@+id/btnDelOffer"
                    app:srcCompat="@drawable/baseline_account_circle_black_48" />


                <ImageView
                    android:id="@+id/btnDelOffer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/baseline_close_black_48" />

            </LinearLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>