<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/userJobImage"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/ic_work"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="10dp" />

        <TextView
            android:id="@+id/trabajo"
            style="@style/headerText"
            android:layout_marginBottom="20dp"
            android:text="Nombre Oferta:"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/idServicioOfer"
                style="@style/profileDetailsImage"
                android:layout_marginStart="40dp"
                android:src="@drawable/name1" />

            <TextView
                android:id="@+id/nameTextView"
                style="@style/profileDetailsTextMain"
                android:layout_toEndOf="@id/idServicioOfer"
                android:text="ID del Servicio:" />

            <TextView
                android:id="@+id/serviceGiven"
                style="@style/wrapperforlongtitles"
                android:layout_below="@+id/nameTextView"
                android:layout_toEndOf="@id/idServicioOfer"
                android:text="#00000" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mobileImageView"
                style="@style/profileDetailsImage"
                android:layout_marginStart="40dp"
                android:src="@drawable/username" />

            <TextView
                android:id="@id/mobileText"
                style="@style/profileDetailsTextMain"
                android:layout_toEndOf="@id/mobileImageView"
                android:text="Nombre de Usuario:" />

            <TextView
                android:id="@+id/userName2"
                style="@style/wrapperforlongtitles"
                android:layout_below="@+id/mobileText"
                android:layout_toEndOf="@id/mobileImageView"
                android:text="@string/usernameProf" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/emailImageView"
                style="@style/profileDetailsImage"
                android:layout_marginStart="40dp"
                android:src="@drawable/ic_jobs" />

            <TextView
                android:id="@+id/emailText"
                style="@style/profileDetailsTextMain"
                android:layout_toEndOf="@id/emailImageView"
                android:text="Trabajo:" />

            <TextView
                android:id="@+id/userTrabajo"
                style="@style/wrapperforlongtitles"
                android:layout_below="@+id/emailText"
                android:layout_toEndOf="@id/emailImageView"
                android:text="trabajo" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/descView"
                style="@style/profileDetailsImage"
                android:layout_marginStart="40dp"
                android:src="@drawable/baseline_description_black_20" />

            <TextView
                android:id="@+id/tVDetOffer"
                style="@style/profileDetailsTextMain"
                android:layout_toEndOf="@id/descView"
                android:text="DescripciÃ³n de la Oferta:" />

            <TextView
                android:id="@+id/jobDescription"
                style="@style/wrapperforlongtitles"
                android:layout_below="@+id/tVDetOffer"
                android:layout_toEndOf="@id/descView"
                android:text="@string/descripcion" />

        </RelativeLayout>

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/aceptarServicio"
            style="@style/StyledBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:onClick="RequestOffer"
            android:shadowColor="#FFF"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="0.5"
            android:text="@string/solicitud"
            android:layout_marginBottom="100dp"/>

    </LinearLayout>
</ScrollView>
