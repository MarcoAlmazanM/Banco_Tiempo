<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:layout_gravity="center"
    android:background="@drawable/home_gradient_login"
    android:focusableInTouchMode="true"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-39dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/registrate"
                    android:textColor="@color/whiteTextColor" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_login_hero" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputCalle"
                        style="@style/parent"
                        android:hint="@string/calle"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <EditText
                            android:id="@+id/eTCalle"
                            style="@style/modifiedEditText"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tVCalleNotAccepted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calle no aceptada"
                        android:visibility="gone">
                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputColonia"
                        style="@style/parent"
                        android:hint="@string/colonia"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <EditText
                            android:id="@+id/eTColonia"
                            style="@style/modifiedEditText"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tVColoniaNotAccepted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Colonia no aceptada"
                        android:visibility="gone">
                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputMunicipio"
                        style="@style/parent"
                        android:hint="@string/municipio"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <EditText
                            android:id="@+id/eTMunicipio"
                            style="@style/modifiedEditText"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tVMuniNotAccepted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Municipio no aceptado"
                        android:visibility="gone">
                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputEstado"
                        style="@style/parent"
                        android:hint="@string/estado"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <EditText
                            android:id="@+id/eTEstado"
                            style="@style/modifiedEditText"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tVEstadoNotAccepted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estado no aceptado"
                        android:visibility="gone">
                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputNumInt"
                        style="@style/parent"
                        android:hint="@string/numInt"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <EditText
                            android:id="@+id/eTNumInt"
                            style="@style/modifiedEditText"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tVNINotAccepted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Numero Interno no aceptado"
                        android:visibility="gone">
                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputCP"
                        style="@style/parent"
                        android:hint="@string/codigoPostal"
                        android:layout_marginTop="@dimen/loginViewsMargin">

                        <EditText
                            android:id="@+id/eTCP"
                            style="@style/modifiedEditText"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tVCodigoPostalNotAccepted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Codigo Postal no aceptado"
                        android:visibility="gone">
                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:padding="20dp">


                        <CheckBox
                            android:id="@+id/cBPrivacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/tvPolPriv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:textColor="@color/blue_2"
                            android:onClick="btngotoPolPriv"
                            android:gravity="center_vertical"
                            android:text="@string/registroTeryPol"/>

                    </LinearLayout>



                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/btnRegisterR"
                        style="@style/StyledBackButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/loginViewsMargin"
                        android:onClick="verifyData2"
                        android:shadowColor="#FFF"
                        android:shadowDx="-2"
                        android:shadowDy="-2"
                        android:shadowRadius="0.5"
                        android:text="@string/registrarse"
                        app:initialCornerAngle="27dp"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />

                    <TextView
                        style="@style/parent"
                        android:layout_marginTop="@dimen/loginViewsMargin"
                        android:onClick="goBackLogin"
                        android:text="@string/goback"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="100dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>